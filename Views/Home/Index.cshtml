    <div class="container">
        <h1 class="display-4 fw-bold">Welcome to MyApp</h1>
        <p class="lead">Build modern, scalable, and secure web applications with ASP.NET MVC</p>
        <a href="/signup" class="btn btn-light btn-lg mt-3">Get Started</a>
    </div>
</section>

<!-- Features Section -->
